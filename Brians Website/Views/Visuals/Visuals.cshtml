@model List<VisualModel>
@{
    ViewData["Title"] = "Visuals";
}

<h2>Visuals</h2>

<div class="textbox">
    <h3 class="centreheader" id="T1"><u>T1</u></h3>
    <br />
    <div id="divdisplayT1">
        <table style="width:100%">
            <thead>
                <tr class="w3-light-grey">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date Of Birth</th>
                    <th>Price</th>
                    <th>Paid In Full</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.SecondName</td>
                    <td>@item.DateOfBirth.ToShortDateString()</td>
                    <td>@item.Price</td>
                    <td>@Html.CheckBox("PaidInFull", item.PaidInFull)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="textbox">
    <h3 class="centreheader" id="T2"><u>T2</u></h3>
    <br />
    <div id="divdisplayT2">
        <table style="width:100%">
            <thead>
                <tr class="w3-light-grey">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date Of Birth</th>
                    <th>Price</th>
                    <th>Paid In Full</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.SecondName</td>
                        <td>@item.DateOfBirth.ToShortDateString()</td>
                        <td>@item.Price</td>
                        <td>@Html.CheckBox("PaidInFull", item.PaidInFull)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="textbox">
    <h3 class="centreheader"><u>T3</u></h3>
    <br />
    <div id="divdisplayT3">
        <table style="width:100%" class="table-striped table-hover">
            <thead>
                <tr class="w3-light-grey">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date Of Birth</th>
                    <th>Price</th>
                    <th>Paid In Full</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.SecondName</td>
                        <td>@item.DateOfBirth.ToShortDateString()</td>
                        <td>@item.Price</td>
                        <td>@Html.CheckBox("PaidInFull", item.PaidInFull)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
$(document).ready(function(){
    $('#T1').click(function () {
        if (!$("#divdisplayT1").is(':visible')) {
            $("#divdisplayT1").fadeIn("slow");
        }
        else {
            $("#divdisplayT1").fadeOut("slow");
        }
    }); 

    $('#T2').click(function () {
        $("#divdisplayT2").toggle();
    });

     $('#T3').click(function () {
        if (!$("#divdisplayT3").is(':visible')) {
            $("#divdisplayT3").fadeIn("slow");
        }
        else {
            $("#divdisplayT3").fadeOut("slow");
        }
    });
});
</script>